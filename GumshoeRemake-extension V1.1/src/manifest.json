{
  "manifest_version": 3,
  "name": "Gumshoe",
  "version": "2.14",
  "description": "Discreetly records login data to local storage.",
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/log.js"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_title": "Gumshoe"
  }
}
